<IfModule mod_rewrite.c>

  RewriteEngine on
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.*)$ $1.php

    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^(.*)$ %{DOCUMENT_ROOT}
  
</IfModule>

